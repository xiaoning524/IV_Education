/* pages/systemMine/index.wxss */
page {
  background-color: #f3f3f3;
  font-size: 14px;
}
.top {
  background-color: #9B5079;
  padding: 0 20px 20px;
  display: flex;
  flex-direction: row;
  box-shadow: #ddd 0px 2px 1px 1px;
}
.icon {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 15px;
  border: #fff 2px solid
}
.icon image{
  width: 60px;
  height: 60px;
}
.name {
  font-size: 18px;
  color: #fff;
}
.body {
  margin-top: 20px;
  box-shadow: #ddd 0px 0px 1px 1px;
  background-color: #fff;
}
.title {
  padding: 8px 20px;
  color: #9B5079;
  border-bottom: #eee 1px solid;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-self: center;
}
#canvas {
    width: 350px;
    height: 310px;
}